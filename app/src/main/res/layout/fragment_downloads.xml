<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".ui.downloads.DownloadsFragment">

    <TextView
        android:id="@+id/download_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody2"
        android:text="@string/download_tab_description"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/downloaded_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Downloaded Songs: 12" />

    <TextView
        android:id="@+id/pending_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Pending Downloads: 5" />

    <TextView
        android:id="@+id/currently_downloading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:visibility="visible"
        tools:text="Downloading: Artist - Song Title" />

</LinearLayout>
