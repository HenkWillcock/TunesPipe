<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/artworkImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/loadingSpinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/artworkImage"
        app:layout_constraintEnd_toEndOf="@id/artworkImage"
        app:layout_constraintStart_toStartOf="@id/artworkImage"
        app:layout_constraintTop_toTopOf="@id/artworkImage"
        tools:visibility="visible" />

    <!-- Track Name -->
    <TextView
        android:id="@+id/trackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/artworkImage"
        app:layout_constraintTop_toTopOf="@id/artworkImage"
        tools:text="The Longest Song Title in the World Ever" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/artistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/trackName"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        tools:text="A Very Famous Artist" />

    <TextView
        android:id="@+id/not_downloaded_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Not Downloaded"
        android:textColor="@color/material_grey_600"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/trackName"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
