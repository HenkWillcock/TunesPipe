<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@android:color/black">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artwork_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

    <TextView
        android:id="@+id/song_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song Title"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/teal_200"
        android:layout_marginBottom="4dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/artist_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/teal_200"
        android:layout_marginBottom="24dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_now_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Song Now"
        android:textColor="@color/teal_200"
        app:strokeColor="@color/teal_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_next_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Play Next"
        android:textColor="@color/teal_200"
        app:strokeColor="@color/teal_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_to_queue_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add to Queue"
        app:icon="@drawable/ic_queue_music_24"
        android:textColor="@color/teal_200"
        app:iconTint="@color/teal_200"
        app:strokeColor="@color/teal_200" />

    <LinearLayout
        android:id="@+id/playlist_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"/>

</LinearLayout>
