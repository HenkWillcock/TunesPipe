<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- START OF NEW CODE: ImageView for Album Art -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artwork_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />
    <!-- END OF NEW CODE -->

    <!-- START OF UPDATED TEXTVIEWS -->
    <TextView
        android:id="@+id/song_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song Title"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@android:color/white"
        android:layout_marginBottom="4dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/artist_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"
        android:maxLines="1"
        android:ellipsize="end"/>
    <!-- END OF UPDATED TEXTVIEWS -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_now_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Song Now" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_next_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Play Next" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_to_queue_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add to Queue"
        app:icon="@drawable/ic_queue_music_24" />

    <LinearLayout
        android:id="@+id/playlist_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"/>

</LinearLayout>
