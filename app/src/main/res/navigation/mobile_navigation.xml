<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.tunespipe.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_your_library"
        android:name="com.example.tunespipe.ui.your_library.YourLibraryFragment"
        android:label="@string/title_your_library"
        tools:layout="@layout/fragment_your_library" >
        <!-- START OF CHANGE: Define the action to navigate from this fragment -->
        <action
            android:id="@+id/action_your_library_to_playlist_detail"
            app:destination="@id/playlistDetailFragment" />
        <!-- END OF CHANGE -->
    </fragment>

    <fragment
        android:id="@+id/navigation_donate"
        android:name="com.example.tunespipe.ui.donate.DonateFragment"
        android:label="@string/title_donate"
        tools:layout="@layout/fragment_donate" />

    <!-- START OF CHANGE: Add the new fragment as a destination -->
    <fragment
        android:id="@+id/playlistDetailFragment"
        android:name="com.example.tunespipe.ui.playlist_detail.PlaylistDetailFragment"
        android:label="Playlist"
        tools:layout="@layout/fragment_playlist_detail">
        <!-- Define the argument that this destination expects to receive -->
        <argument
            android:name="playlistId"
            app:argType="long" />
    </fragment>
    <!-- END OF CHANGE -->

</navigation>
